.cl-page{:class => "pt-page-#{(index).to_s}"}
  .cl-header.cl-margin
    %h1= landmark.name
  .cl-cover-photo
    =cl_image_tag(landmark.cover_photo, :alt => "#{landmark.name}")
    .cl-opacity-guard
      %h2= landmark.summary
  .cl-additional-info.cl-margin
    .cl-description
      %h3= landmark.description
    .cl-exhibit-grid
      - landmark.exhibits.where{medium != "cover_photo"}.each do |exhibit|
        = render 'exhibit', :exhibit=>exhibit, :landmark=>landmark